{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Livuals",
  "version": "0.1.0",
  "identifier": "com.livuals.desktop",
  "build": {
    "beforeDevCommand": "node src-tauri/scripts/prepare-resources.js",
    "beforeBuildCommand": "node src-tauri/scripts/prepare-resources.js"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Livuals",
        "width": 1280,
        "height": 800,
        "visible": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app", "msi"],
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "./resources",
      "../../dependencies"
    ]
  }
}
